{
  "name": "helm-values-explorer",
  "publisher": "rossp",
  "repository": {
    "type": "git",
    "url": "https://github.com/rp779/helm-values-explorer"
  },
  "displayName": "Helm Values Explorer",
  "description": "Explore and preview Helm values across multiple environment files directly in your templates",
  "icon": "images/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Helm Values Hover",
      "properties": {
        "helmValuesExplorer.valueFiles": {
          "type": "array",
          "default": [
            "values.yaml",
            "*values.yaml",
            "values.*.yaml"
          ],
          "description": "Patterns to match Helm values files. Supports glob patterns.",
          "items": {
            "type": "string"
          }
        },
        "helmValuesExplorer.showFileNames": {
          "type": "boolean",
          "default": true,
          "description": "Show which values file each value comes from"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rm -rf dist out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "fast-glob": "^3.3.3",
    "js-yaml": "^4.1.0"
  }
}
